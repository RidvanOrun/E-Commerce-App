@model ProductDTO

<div class="container">

    <h2>Profil Özeti</h2>

    <div class="header">
        <img src="@Model.ImagePath" class="img-lg" width="100" height="100" />
        <h5 class="card-title">Kullanıcı Adı: @Model.ProductName</h5>
    </div>
    <div>
        <div class="nav-item">
            <a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-username="@Model.ProductName"> Edit </a>
        </div>
    </div>
</div>




