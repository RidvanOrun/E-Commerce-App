@model ProductDTO
<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <img src="~/images/product/@Model.ImagePath" alt="Not Found Image" class="card-img-top" />
            </div>
            <div class="card-body">
                <p class="card-title">@Model.ProductName</p>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.UnitPrice.ToString("C2")</p>
            </div>
        </div>
    </div>
</div>