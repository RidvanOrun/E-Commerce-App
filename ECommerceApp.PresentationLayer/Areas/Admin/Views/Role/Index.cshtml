@model IEnumerable<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2">
    <div class="col-sm-12">
        <div class="card">


            <div class="card-header">
                <h4 class="card-title">List of Roles</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Users</th>
                            <th>Edit</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td user-role="@item.Id">@item.Id</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                </td>
                                <td>
                                    <a asp-action="Remove" asp-route-roleName="@item.Name.ToString()" class="btn btn-danger confirmDeletion">Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-block btn-primary">Create The New Role</a>
            </div>
        </div>
    </div>
</div>


